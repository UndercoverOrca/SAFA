@using Safa.Domain
@model Safa.Application.TransactionRequest

<form class="border p-3 mt-4" method="post" asp-action="Delete">

    <div class="input-group mb-3 w-25">
        <input type="date" asp-for="Date" class="form-control" placeholder="Date" aria-label="Date" readonly>
    </div>

    <div class="input-group mb-3 w-25">
        <input type="text" asp-for="Description" class="form-control" placeholder="Description" aria-label="Description of the transaction" readonly>
    </div>

    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Transaction type</label>
        <select asp-for="Type" class="form-select" id="inputGroupSelect01" disabled>
            <option selected>Choose...</option>
            <option value="@TypeOfTransaction.Income">Income</option>
            <option value="@TypeOfTransaction.Expense">Expense</option>
        </select>
    </div>

    <div class="input-group mb-3 w-25">
        <span class="input-group-text">â‚¬</span>
        <input asp-for="Amount" type="text" class="form-control" aria-label="Amount" readonly>
    </div>

    <div class="form-check mb-4">
        <input asp-for="IsSpendingMoney" class="form-check-input" type="checkbox" value="" id="flexCheckDefault" disabled>
        <label class="form-check-label" for="flexCheckDefault">
            Is spending money
        </label>
    </div>

    <a asp-controller="Cashbook" asp-action="Index" class="btn btn-secondary">back to overview</a>
    <button type="submit" class="btn btn-primary">Delete</button>

</form>